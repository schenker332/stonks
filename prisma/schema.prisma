generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// ─────────────── Dein Datenmodell ────────────────

model Transaction {
  id          Int      @id @default(autoincrement())
  date        DateTime
  name        String   @default("")
  category    String   @default("")
  price       Float    @default(0)
  tag         String   @default("")
  description String
  amount      Float
  type        TransactionType
}

enum TransactionType {
  income
  expense
}